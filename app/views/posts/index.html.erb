<div class="container py-4">
    <table class="table">
        <tr class="table-primary">
            <th>Titulo</th>
            <th>Fecha</th>
            <th>Contenido</th>
            <th>URL Imagen</th>
        </tr>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.created_at %></td>
                <td><%= post.content.gsub "#{post.censor}", '' %></td>
                <td><%= post.image_url %></td>
            </tr>
        <% end %>
    </table>
</div>

<div class="container mb-5">
    <h2>Crear Post</h2>
    <form method="get" action="/posts/create" id="create_posts">
        <div class="mb-3">
            <label for="title" class="form-label">TÃ­tulo</label>
            <input name="title" type="title" id="title" class="form-control">
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">Contenido</label>
            <textarea name="content" type="content" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="censor" class="form-label">Palabra a censurar</label>
            <input name="censor" type="censor" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-check-label" for="exampleCheck1">URL imagen</label>
            <input name="image_url" type="image_url" class="form-control">
        </div>
        
        <button type="submit" class="btn btn-primary">Crear</button>

    </form>
</div>